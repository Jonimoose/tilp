<?xml version="1.0"?>
<interface>
  <object class="GtkUIManager" id="uimanager1">
    <child>
      <object class="GtkActionGroup" id="actiongroup1">
        <child>
          <object class="GtkAction" id="set_as_working_dir1">
            <property name="name">set_as_working_dir1</property>
            <property name="tooltip" translatable="yes">Set the current directory as working directory whenever TiLP starts.</property>
            <property name="label" translatable="yes">Set As Working _Folder</property>
            <signal handler="rbm_set_as_working_dir1_activate" name="activate"/>
          </object>
        </child>
        <child>
          <object class="GtkAction" id="cut1">
            <property name="stock_id">gtk-cut</property>
            <property name="name">cut1</property>
            <property name="tooltip" translatable="yes">Cut selected files</property>
            <signal handler="rbm_cut1_activate" name="activate"/>
          </object>
          <accelerator key="X" modifiers="GDK_CONTROL_MASK"/>
        </child>
        <child>
          <object class="GtkAction" id="copy1">
            <property name="stock_id">gtk-copy</property>
            <property name="name">copy1</property>
            <property name="tooltip" translatable="yes">Copy selected files</property>
            <signal handler="rbm_copy1_activate" name="activate"/>
          </object>
          <accelerator key="C" modifiers="GDK_CONTROL_MASK"/>
        </child>
        <child>
          <object class="GtkAction" id="paste1">
            <property name="stock_id">gtk-paste</property>
            <property name="name">paste1</property>
            <property name="tooltip" translatable="yes">Paste previously selected files</property>
            <signal handler="rbm_paste1_activate" name="activate"/>
          </object>
          <accelerator key="V" modifiers="GDK_CONTROL_MASK"/>
        </child>
        <child>
          <object class="GtkAction" id="delete_file1">
            <property name="stock_id">gtk-delete</property>
            <property name="name">delete_file1</property>
            <property name="tooltip" translatable="yes">Delete selected file(s)</property>
            <signal handler="rbm_delete_file1_activate" name="activate"/>
          </object>
          <accelerator key="Delete"/>
        </child>
        <child>
          <object class="GtkAction" id="rename1">
            <property name="name">rename1</property>
            <property name="tooltip" translatable="yes">Rename file(s)</property>
            <property name="label" translatable="yes">_Rename</property>
          </object>
        </child>
        <child>
          <object class="GtkAction" id="gfm1">
            <property name="stock_id">gtk-open</property>
            <property name="name">gfm1</property>
            <property name="label" translatable="yes">Open With _GFM</property>
            <signal handler="rbm_opengfm_activate" name="activate"/>
          </object>
        </child>
        <child>
          <object class="GtkAction" id="options1">
            <property name="stock_id">gtk-preferences</property>
            <property name="name">options1</property>
          </object>
        </child>
        <child>
          <object class="GtkToggleAction" id="show_all_files1">
            <property name="name">show_all_files1</property>
            <property name="label" translatable="yes">_Show all files</property>
            <signal handler="rbm_show_all_files1_activate" name="activate"/>
          </object>
        </child>
        <child>
          <object class="GtkToggleAction" id="confirm1">
            <property name="name">confirm1</property>
            <property name="label" translatable="yes">_Confirm delete/overwrite</property>
            <signal handler="rbm_confirm_delete_activate" name="activate"/>
          </object>
        </child>
        <child>
          <object class="GtkAction" id="properties1">
            <property name="stock_id">gtk-properties</property>
            <property name="name">properties1</property>
            <signal handler="rbm_properties1_activate" name="activate"/>
          </object>
        </child>
      </object>
    </child>
    <ui>
      <popup name="clist_rbm">
        <menuitem action="set_as_working_dir1"/>
        <separator/>
        <menuitem action="cut1"/>
        <menuitem action="copy1"/>
        <menuitem action="paste1"/>
        <menuitem action="delete_file1"/>
        <menuitem action="rename1"/>
        <separator/>
        <menuitem action="gfm1"/>
        <separator/>
        <menu action="options1">
          <menuitem action="show_all_files1"/>
          <menuitem action="confirm1"/>
        </menu>
        <separator/>
        <menuitem action="properties1"/>
      </popup>
    </ui>
  </object>
  <!-- interface-requires gtk+ 2.8 -->
  <!-- interface-naming-policy toplevel-contextual -->
  <object class="GtkMenu" constructor="uimanager1" id="clist_rbm">
    <property name="visible">True</property>
  </object>
</interface>
